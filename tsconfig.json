{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "es6",
        "outDir": "./out",
        "lib": [
            "es2021",
            "dom"
        ],
        "strict": true,
        "plugins": [
            {
              "transform": "ts-auto-mock/transformer",
              "cacheBetweenTests": false
            }
          ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}